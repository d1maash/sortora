{
    "name": "sortora",
    "version": "1.1.1",
    "description": "Smart offline file organizer with AI-powered classification. Organize documents, code, and media files intelligently.",
    "type": "module",
    "bin": {
        "sortora": "./bin/cli.js"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "bin",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "dev": "tsx watch src/cli.ts",
        "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
        "test": "vitest",
        "lint": "eslint src/",
        "start": "node ./bin/cli.js",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "@xenova/transformers": "^2.17.0",
        "chalk": "^5.3.0",
        "chokidar": "^3.6.0",
        "cli-table3": "^0.6.5",
        "commander": "^12.1.0",
        "date-fns": "^3.6.0",
        "exif-reader": "^2.0.0",
        "fs-extra": "^11.2.0",
        "glob": "^10.4.0",
        "inquirer": "^9.2.0",
        "mammoth": "^1.7.0",
        "mime-types": "^2.1.35",
        "music-metadata": "^7.14.0",
        "ora": "^8.0.1",
        "pdf-parse": "^1.1.1",
        "sharp": "^0.33.4",
        "sql.js": "^1.10.0",
        "tesseract.js": "^5.0.5",
        "xxhash-wasm": "^1.0.2",
        "yaml": "^2.4.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/inquirer": "^9.0.7",
        "@types/mime-types": "^3.0.1",
        "@types/node": "^20.14.0",
        "@types/pdf-parse": "^1.1.4",
        "@types/sql.js": "^1.4.9",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vitest/coverage-v8": "^1.6.0",
        "eslint": "^8.57.0",
        "tsup": "^8.1.0",
        "tsx": "^4.11.0",
        "typescript": "^5.9.3",
        "vitest": "^1.6.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "file-organizer",
        "file-manager",
        "ai",
        "offline",
        "cli",
        "automation",
        "organization",
        "documents",
        "sorting",
        "classifier",
        "machine-learning",
        "productivity",
        "declutter",
        "files"
    ],
    "author": "Dinmukhanbet Aizharykov",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/d1maash/sortora.git"
    },
    "homepage": "https://github.com/d1maash/sortora#readme",
    "bugs": {
        "url": "https://github.com/d1maash/sortora/issues"
    }
}
